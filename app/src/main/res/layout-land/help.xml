        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Less than 35%"
            android:layout_marginTop="20dp"
            android:id="@+id/txt35"
            android:layout_gravity="center_horizontal"
            android:layout_alignTop="@+id/item_image4"
            android:layout_centerHorizontal="true" />

        <ImageView
            android:id="@+id/item_image5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:maxHeight="60dp"
            android:maxWidth="60dp"
            android:layout_below="@+id/item_image4"
            android:layout_marginTop="5dp"
            android:src="@drawable/parking_25" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Less than 25%"
            android:layout_marginTop="20dp"
            android:id="@+id/txt25"
            android:layout_gravity="center_horizontal"
            android:layout_alignTop="@+id/item_image5"
            android:layout_centerHorizontal="true" />

        <ImageView
            android:id="@+id/item_image6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:maxHeight="60dp"
            android:maxWidth="60dp"
            android:layout_below="@+id/item_image5"
            android:layout_marginTop="5dp"
